module top (key0, key1, binary, d0,d1,d2);
	
	input key0, key1; //key0 reseta, key1 soma 1
	output reg [7:0] binary;
	output reg [6:0] d0,d1,d2; //nÃºmero apresentado na tela em BCD
	
	initial begin
		d0 = 7'b1000000;
		d1 = 7'b1000000;
		d2 = 7'b1000000;
		binary = 8'b00000000;
	end
	
	//reset
	always @(negedge key0) begin
	
		d0 = 7'b1000000;
		d1 = 7'b1000000;
		d2 = 7'b1000000;
		binary = 8'b00000000;
	
	end
	
	always
	
endmodule